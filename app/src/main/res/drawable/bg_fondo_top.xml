<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="0.1dp"
                android:bottomLeftRadius="0.1dip"
                android:topLeftRadius="1000dip"
                android:topRightRadius="1000dip"/>
            <solid android:color="@color/fondoAlpha" />


        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="50pt" android:topRightRadius="50pt" />
            <solid android:color="@color/fondoAlpha" />

            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
        </shape>
    </item>
</selector>