<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_gral"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/transition_image"
    android:gravity="bottom"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondoAlpha"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAfter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/bg_right"
            android:rotation="180"
            app:srcCompat="@drawable/ic_siguiente_flecha" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitleService"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="Cargando..."
                android:textColor="#333333"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_green" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgService"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:foregroundGravity="center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_tuberia_icono" />

        <ImageButton
            android:id="@+id/btnBefore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/bg_right"
            app:srcCompat="@drawable/ic_siguiente_flecha" />
    </LinearLayout>

</LinearLayout>