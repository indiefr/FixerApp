<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/chAhora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Reparar ahora mismo" />

    <LinearLayout
        android:id="@+id/lyDate"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:fontFamily="sans-serif-light"
            android:text="Fecha de servicio"
            android:textColor="#333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edtFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/button_white"
                android:gravity="left|center_vertical"
                android:text="Fecha" />

            <Spinner
                android:id="@+id/spHora"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_mas" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.9"
            android:fontFamily="sans-serif-medium"
            android:text="Añadir una nueva reparación"
            android:textColor="#333" />

    </LinearLayout>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnAutorizar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_check"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="8dp"
        android:text="Solicitar confirmación"
        android:textColor="#FFF"
        android:textSize="13sp"
        app:spinning_bar_color="@color/colorAccent"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />



</LinearLayout>