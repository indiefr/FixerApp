<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.creatio.fixer.MyAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lyCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_fixer_logo" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Nombre"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:text="Gerardo"
                android:textColor="@color/letters"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Apellidos"
                android:textColor="#333333"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblLast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:text="Salazar"
                android:textColor="@color/letters"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Correo electrÃ³nico"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:text="gerardo.dev.ss@gmail.com"
                android:textColor="@color/letters"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Telefono"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblTel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:text="(614) 203 38 50"
                android:textColor="@color/letters"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtmetodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Metodo de pago"
                android:textColor="#333333"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
